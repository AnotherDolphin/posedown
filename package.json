{
	"name": "posedown",
	"version": "0.1.0",
	"description": "A markdown-based rich text editor with AST-driven transformations",
	"author": "Abdullah Nayer <abdullahnayer@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/AnotherDolphin/posedown"
	},
	"keywords": [
		"markdown",
		"editor",
		"svelte",
		"rich-text",
		"contenteditable"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./core": {
			"types": "./dist/core/index.d.ts",
			"default": "./dist/core/index.js"
		},
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"dompurify": "^3.2.7",
		"hast-util-from-dom": "^5.0.1",
		"hast-util-to-dom": "^4.0.1",
		"mdast-util-gfm": "^3.1.0",
		"micromark-extension-gfm": "^3.0.0",
		"rehype-parse": "^9.0.1",
		"rehype-remark": "^10.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"unist-util-remove": "^4.0.0",
		"unist-util-visit": "^5.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/jsdom": "^27.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest run tests/unit",
		"test:unit:watch": "vitest --watch tests/unit",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	}
}
